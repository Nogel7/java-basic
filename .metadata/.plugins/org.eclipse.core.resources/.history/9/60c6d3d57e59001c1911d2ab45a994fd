package constructor;

public class BaketballPlayer {
     public int height;
     public int jumpHeight;
     
     public BaketballPlayer(int h,int j) {
    	 height = h;
    	 jumpHeight = j;
    	 System.out.println("생성된 선수 키 : " + height + "점프력 : " + jumpHeight);
     }
     
     public void getinfo() { 
  	   System.out.println("키 : " + height);
  	   System.out.println("점프력 : " + jumpHeight);
     }
     public void dunkShoot() {
    	 (height + jumpHeight) > 300 ;
    	 System.out.println("덩크슛에 성공했습니다.");
    	 System.out.println("골대에 닿지 않았습니다.");
    	 
     }
     
}
