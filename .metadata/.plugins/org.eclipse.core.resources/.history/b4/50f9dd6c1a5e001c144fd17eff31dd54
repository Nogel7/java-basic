package game.interaction;

public class Troll {
	private int hp;
    private int atk;
    private int def;


    public Troll() {
        this.hp = 9;
        this.atk = 5;
        this.def = 2;
    }
    
    public void doBattle(int uAtk) {
    	this.hp = (this.hp + this.def) - uAtk;
    	System.out.println("트롤의 체력이 : " + hp);
    }

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}
    
}